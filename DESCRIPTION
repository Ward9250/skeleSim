Package: skeleSim
Type: Package
Title: Genetic simulation engine
Version: 0.9
Authors@R: c(
  EA = person("Eric", "Archer", email = "eric.archer@noaa.gov", role = c("aut")),
  MDL = person("Michelle", "DePrenger-Levin", email = "michelledpl@gmail.com", role = c("aut")),
